<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="400.0" prefWidth="594.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="96.0" minHeight="10.0" prefHeight="94.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="62.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="Date(dd/mm/yyyy)">
         <GridPane.margin>
            <Insets left="100.0" />
         </GridPane.margin></Label>
      <Label text="Weight(Kg)" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="85.0" />
         </GridPane.margin></Label>
      <Label text="Temperature(Celcius)" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets left="65.0" />
         </GridPane.margin></Label>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <Label text="Low">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="low" prefHeight="26.0" prefWidth="56.0" />
            <Label text="High">
               <HBox.margin>
                  <Insets left="50.0" right="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="high" prefHeight="26.0" prefWidth="60.0" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <children>
            <Button fx:id="okHome" mnemonicParsing="false" text="Ok">
               <HBox.margin>
                  <Insets left="40.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelHome" mnemonicParsing="false" text="Cancel">
               <HBox.margin>
                  <Insets left="30.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <TextField fx:id="weight" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="temperature" prefHeight="17.0" prefWidth="265.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin>
      </TextField>
      <Label text="Blood Pressure" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets left="75.0" />
         </GridPane.margin>
      </Label>
      <Label text="Notes(Max 50 words))" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets left="55.0" />
         </GridPane.margin>
      </Label>
      <TextArea fx:id="notes" prefHeight="96.0" prefWidth="257.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin>
      </TextArea>
      <DatePicker fx:id="date" GridPane.columnIndex="1" />
      <Label fx:id="status" GridPane.rowIndex="5">
         <GridPane.margin>
            <Insets left="100.0" />
         </GridPane.margin>
      </Label>
   </children>
</GridPane>
