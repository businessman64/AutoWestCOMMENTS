<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" spacing="20.0" maxWidth="Infinity" maxHeight="Infinity" minWidth="600.0" minHeight="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>    <children>
        <Label text="Screen Configuration" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER">
        <Label text="Server Type" />
        <ComboBox fx:id="comboServerType" />
    </HBox>
    <GridPane hgap="10" vgap="10" alignment="CENTER" fx:id="gridIP" managed="false" >
        <Label fx:id="labelIpAdd" text="IP Address" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="textIp"  GridPane.columnIndex="1" GridPane.rowIndex="0"  />
        <Button fx:id="buttonConnect" mnemonicParsing="false" text="Connect" disable="true" GridPane.columnIndex="2" GridPane.rowIndex="0"  />
    </GridPane>
    <HBox  fx:id="hboxVnc" spacing="10" alignment="CENTER" visible="false" managed="false" >
        <Label text="Enter Number of Screens on the VNC:" />
        <TextField fx:id="textScreenNumberVNC" prefWidth="50.0" text="Enter Number of screens" />
        <ComboBox fx:id="comboScreenNum" />
        <Button fx:id="buttonTestVNC" text="Test VNC" disable="true"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Enter Number of Screens:" />
        <TextField fx:id="textScreenNumber" prefWidth="200.0" text="Enter Number of screens" />
    </HBox>
        <Button fx:id="buttonShow" mnemonicParsing="false" text="Show Screen" maxWidth="Infinity"/>

        <!-- Place for dynamic GridPane with screens -->
        <GridPane fx:id="grid" maxWidth="Infinity" alignment="CENTER" hgap="10" vgap="10">
            <!-- Add dynamic content here -->
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="buttonConfirm" mnemonicParsing="false" text="Confirm Screen Position" maxWidth="Infinity" visible="false" />
        </HBox>
    <HBox spacing="10" alignment="CENTER">
            <Button fx:id="buttonTest" mnemonicParsing="false" text="Test" disable="true" >
                <tooltip><Tooltip text="Select a screen by click on green button. " /></tooltip>
            </Button>
            <Button fx:id="buttonApply" mnemonicParsing="false" text="Apply" disable="true">
            <tooltip><Tooltip text="Select a screen by click on green button. " /></tooltip>
        </Button>
<!--        <Button fx:id="buttonLocalScreen" mnemonicParsing="false" text="Select Local Screen" disable="true" visible="false" managed="false"/>-->
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="buttonCalibrateLabel" text="Calibrate Mouse" />
<!--        <TextField fx:id="textXCali" text="X" maxHeight="10" maxWidth="30"/>-->
<!--        <TextField fx:id="textYCali" text="Y" maxHeight="10" maxWidth="30"/>-->
        <Spinner fx:id="textXCali" min="-100" max="100" initialValue="1" editable="true"/>
        <Spinner fx:id="textYCali" min="-100" max="100" initialValue="1" editable="true"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="prompt" style="-fx-font-size: 10px; -fx-font-weight: bold" textFill="RED"/>

    </HBox>



    <GridPane alignment="CENTER">
        <Label text="Take ScreenShot" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <CheckBox fx:id="screenShot" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="buttonClose" mnemonicParsing="false" text="Close" disable="false"  />

    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="promptConnect" style="-fx-font-size: 10px; -fx-font-weight: bold" textFill="Green"/>
    </HBox>


<!--        <HBox spacing="10" alignment="CENTER">-->
<!--        </HBox>-->
    </children>
</VBox>